<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:background="#e602000a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DIONYSUS"
        android:id="@+id/titleView"
        android:textColor="#ee9afcff"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceQueryView"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:textColor="#aaffffff"
        android:text="Current Device:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="no device"
        android:id="@+id/textView"
        android:layout_below="@+id/deviceQueryView"
        android:layout_centerHorizontal="true"
        android:textColor="#64ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTION A"
        android:id="@+id/buttonA"
        android:background="#ff77b9ff"
        android:layout_above="@+id/buttonC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTION B"
        android:id="@+id/buttonB"
        android:background="#ff85ffab"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonC"
        android:layout_alignLeft="@+id/buttonA"
        android:layout_alignStart="@+id/buttonA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTION C"
        android:id="@+id/buttonC"
        android:background="#ffff8bc5"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonB"
        android:layout_alignStart="@+id/buttonB" />

</RelativeLayout>
